{
	"include": ["source/"],
	"exclude": ["node_modules/"],
	"compilerOptions": {
        "strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "es2022"
	}
}
